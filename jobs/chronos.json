{
  "id": "chronos",
  "cpus": 0.5,
  "mem": 256.0,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "quay.io/hackliff/chronos:cloud",
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 4400, "hostPort": 0, "servicePort": 4400, "protocol": "tcp" }
      ],
      "parameters": [
         { "key": "env", "value": "CHRONOS_HTTP_PORT=4400" },
         { "key": "env", "value": "CHRONOS_MASTER=zk://46.101.42.152:2181/mesos" },
         { "key": "env", "value": "CHRONOS_ZK_HOSTS=46.101.42.152:2181" }
      ]
    }
  }
}
